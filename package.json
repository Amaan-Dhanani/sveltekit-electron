{
	"name": "sveltekit-electron",
	"version": "0.0.1",
	"private": true,
	"description": "Minimal Sveltekit + Electron starter template.",
	"main": "src/electron.cjs",
	"type": "module",
	"scripts": {
		"dev": "NODE_ENV=dev npm run dev:all",
		"dev:all": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run dev:svelte\" \"npm run dev:electron\"",
		"dev:svelte": "svelte-kit dev",
		"dev:electron": "electron src/electron.cjs",
		"build": "cross-env NODE_ENV=production npm run build:svelte && npm run build:electron",
		"build:svelte": "svelte-kit build",
		"build:electron": "electron-builder -mwl --config build.config.json",
		"start": "svelte-kit start"
	},
	"browserslist": [
		"Chrome 89"
	],
	"dependencies": {
		"electron-serve": "^1.1.0",
		"electron-context-menu": "^2.5.0",
		"electron-window-state": "^5.0.3"
	},
	"devDependencies": {
		    "@sveltejs/adapter-node": "next",
    "@sveltejs/adapter-static": "^1.0.0-next.0",
    "@sveltejs/kit": "next",
    "concurrently": "^6.0.0",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "electron-reloader": "^1.2.0",
    "sass": "^1.0.0",
    "svelte": "^3.29.0",
    "svelte-preprocess": "^4.0.0",
    "vite": "^2.1.0",
		"@rollup/plugin-alias": "^3.1.2",
		"@rollup/plugin-commonjs": "^18.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^11.2.1",
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.5",
		"@types/concurrently": "^6.0.1",
		"@types/electron-window-state": "^2.0.34",
		"@types/eslint": "^7.2.8",
		"@types/prettier": "^2.2.3",
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"chokidar": "^3.5.1",
		"cross-env": "^7.0.3",
		"dotenv": "^8.2.0",
		"electron-connect": "^0.6.3",
		"electron-packager": "^15.2.0",
		"electron-updater": "^4.3.8",
		"eslint": "^7.23.0",
		"eslint-plugin-svelte": "^1.1.2",
		"npm-run-all": "^4.1.5",
		"ora": "^5.4.0",
		"prettier": "^2.2.1",
		"prettier-plugin-svelte": "^2.2.0",
		"rollup": "^1.20.0",
		"rollup-plugin-esbuild": "^3.0.2",
		"rollup-plugin-livereload": "^1.3.0",
		"rollup-plugin-svelte": "^5.2.3",
		"rollup-plugin-terser": "^5.3.1",
		"spectron": "^14.0.0",
		"svelte-check": "^1.3.0",
		"typescript": "^4.2.3"
	}
}
